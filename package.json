{
  "name": "node-ts-template",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc",
    "dev": "tsnd --transpile-only --exit-child --respawn --ignore-watch node_modules src/index.ts",
    "start": "npm run migrate-prod && node dist/index.js",
    "test": "dotenv -e .env.test npm run migrate && npx jest --passWithNoTests --noStackTrace --runInBand",
    "migrate": "echo 'running migration'",
    "migrate-prod": "echo 'running migration'"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "sqlstring": "^2.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/sqlstring": "^2.3.0",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.3",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
